doctype 5
html
    head
        title eurekaa.it
        meta(name='viewport', content='width=device-width', initial-scale='1.0')
        script(src='require.js', data-main='bootstrap')
    
    body(data-widget='scripts/index')
        #layout(data-widget='qX://scrollbar')
            
            header#header 
                img#logo_rubik(src='media/images/logo_rubik.png')
                img#logo_eurekaa(src='media/images/logo_eurekaa.png')
            
            #stripe: img#keyboard(src='media/images/keyboard.png')
            
            nav#menu(
                class='menu',
                data-widget='qX://menu',
                data-options-widgets-breadcrumber='#breadcrumber',
                data-options-widgets-panel='#panel'
            ): datalist
                option.active(label='i18n://menu#eurekaa', value='page://eurekaa.html')
                option(label='i18n://menu#services', value='page://services.html')
                option(label='i18n://menu#curriculum', value='page://curriculum.html')
                option(label='i18n://menu#portfolio', value='page://portfolio.html')
                option(label='i18n://menu#projects', value='page://projects.html')
                option(label='i18n://menu#contacts', value='page://contacts.html')
                
                
            nav#langswitcher(
                data-widget='qX://langswitcher'
            ): datalist
                option(label='eng', value='en-uk')
                option.active(label='ita', value='it-it')
            
            nav#breadcrumber( 
                data-widget='qX://breadcrumber' 
                list='breadcrumber-list'
            ): datalist#breadcrumber-list
                option(label='') 
            
            article#panel( 
                data-widget='qX://panel' 
                data-options-scrollbars='true'
                list='panel-list'
            ): datalist#panel-list
                option(label='', value='page://eurekaa.html')